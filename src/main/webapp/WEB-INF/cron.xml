<!--
    Description: Cron job.
    Version: 1.2.0.9, Jun 20, 2014
    Author: Liang Ding
-->
<cronentries>
    <cron>
        <url>/articles/accessibility?key=0</url>
        <description>Checks accessibility of articles</description>
        <schedule>every 24 hours</schedule>
    </cron>
    
    <cron>
        <url>/articles/accessibility/remove?key=0</url>
        <description>Removes not found articles</description>
        <schedule>every 24 hours</schedule>
    </cron>
    
    <cron>
        <url>/users/accessibility?key=0</url>
        <description>Checks accessibility of users</description>
        <schedule>every 12 hours</schedule>
    </cron>
    
    <!--
    See https://github.com/b3log/b3log-rhythm/issues/5 for more details.
    <cron>
        <url>/dns/monitor</url>
        <description>Monitor *.b3log.org and Report</description>
        <schedule>every 24 hours</schedule>
    </cron>
    -->
    
    <cron>
        <url>/broadcast/chance/gen</url>
        <description>Generates broadcast chances</description>
        <schedule>every 30 minutes</schedule>
    </cron>
</cronentries>
